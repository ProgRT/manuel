%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Framed title
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def\framedtitle{
	\@author
\vskip3pt
	\rule{\textwidth}{1pt}
	\vskip 0.5\baselineskip
	{\Huge\@title}\par
	{\thesubtitle}
	\rule{\textwidth}{1pt}
}

